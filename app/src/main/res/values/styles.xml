<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorSecondary">#FF5722</color>
    <color name="background">#FAFAFA</color>
    <color name="content">#FFFFFFFF</color>
    <color name="divider">#1F000000</color>
    <color name="textColor">#000</color>

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="ImageTheme" parent="Base.AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:background">#000</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>